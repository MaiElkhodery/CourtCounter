<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Team A"
                    android:textSize="14sp"
                    android:fontFamily=" sans-serif-medium"/>

                <TextView
                    android:id="@+id/scoreOfA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:text="0"
                    android:textSize="56sp"
                    android:fontFamily="sans-serif-light"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:onClick="inc3_scoreOfA"
                    android:text="  +3 POINTS  " />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:onClick="inc2_scoreOfA"
                    android:text="  +2 POINTS  "
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:onClick="inc1_scoreOfA"
                    android:text="FREE THROW"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Team B"
                    android:textSize="14sp"
                    android:fontFamily=" sans-serif-medium"/>

                <TextView
                    android:id="@+id/scoreOfB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:text="0"
                    android:textSize="56sp"
                    android:fontFamily="sans-serif-light"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:onClick="inc3_scoreOfB"
                    android:text="  +3 POINTS  "
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:onClick="inc2_scoreOfB"
                    android:text="  +2 POINTS  "
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"/>

                <Button
                    android:id="@+id/freeThrow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:onClick="inc1_scoreOfB"
                    android:text="FREE THROW"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:onClick="reset"
            android:padding="5dp"
            android:text="  RESET  " />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>